<%- include('includes/head.ejs', { title: 'Signup' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
  <!-- <script src="/scripts/signup.js" defer></script> -->
  </head>

  <body>
    <%- include('includes/header.ejs') %>
      <main id="signup">
        <h1>Signup</h1>
        <% if(sessionData.hasError){ %>
          <p id="input-error">
            <%= sessionData.message %>
          </p>
          <% } %>
            <form action="/signup" method="POST">
              <div class="form-control">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
              </div>
              <div class="form-control">
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= sessionData.confirmEmail %>"
                  required>
              </div>
              <div class="form-control">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= sessionData.password %>" required>
              </div>
              <button class="btn" id="btn-create-user">Create user</button>
            </form>
            <div id="auth-alternative">
              <a class="btn btn-alt" href="/login">Login instead</a>
            </div>
      </main>
  </body>

  </html>